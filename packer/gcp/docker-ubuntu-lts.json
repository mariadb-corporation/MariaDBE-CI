{
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "mariadb-enterprise-server",
      "source_image_family": "ubuntu-2004-lts",
      "zone": "us-central1-a",
      "communicator": "ssh",
      "disk_size": "60",
      "image_name": "jw-docker-{{timestamp}}",
      "image_family": "jw-docker",
      "ssh_username": "jenkins"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sleep 120",
                    "sudo apt-get update", "sudo apt-get -y dist-upgrade", "sudo apt-get -y -f install",
                    "sudo apt-get install -y default-jre-headless git",
                    "sudo apt -y install apt-transport-https ca-certificates curl software-properties-common",
                    "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
                    "sudo add-apt-repository 'deb [arch=amd64] https://download.docker.com/linux/ubuntu focal stable'",
                    "sudo apt update", "sudo apt -y install docker-ce", "sudo usermod -aG docker jenkins",
                    "sudo sed -i 's|1|0|g' /etc/apt/apt.conf.d/20auto-upgrades"]
    }
  ]
}
